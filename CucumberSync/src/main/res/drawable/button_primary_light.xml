<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/primary_light"
                android:endColor="@color/primary_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_text" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/primary_light"
                android:endColor="@color/primary_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_text" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/primary_light"
                android:endColor="@color/primary_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_text" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>