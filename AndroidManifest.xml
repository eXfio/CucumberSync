<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.exfio.weavedroid"
    android:versionCode="1"
    android:versionName="0.1-alpha" android:installLocation="internalOnly">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="org.exfio.weavedroid.syncadapter.AccountAuthenticatorService"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/account_authenticator" />
        </service>

        <!-- android:process=":sync" creates new process
        <service 
            android:name="org.exfio.weavedroid.syncadapter.ContactsSyncAdapterService" 
            android:exported="true" 
            android:process=":sync">
        -->
        <service 
            android:name="org.exfio.weavedroid.syncadapter.ContactsSyncAdapterService" 
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data 
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_contacts" /> 
            <meta-data 
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts" /> 
        </service>
        <activity
            android:name="org.exfio.weavedroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.exfio.weavedroid.syncadapter.AddAccountActivity"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name="org.exfio.weavedroid.ReceivedClientAuth"
            android:parentActivityName="org.exfio.weavedroid.MainActivity"
            android:excludeFromRecents="true">
        </activity>
        <activity
            android:name="org.exfio.weavedroid.PendingClientAuth"
            android:parentActivityName="org.exfio.weavedroid.MainActivity"
            android:excludeFromRecents="true">
        </activity>
        
    </application>

</manifest>
